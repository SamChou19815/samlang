{
  "private": true,
  "workspaces": [
    "samlang-cli",
    "samlang-core-*",
    "samlang-demo"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,yml}'",
    "codegen": "yarn workspace @dev-sam/samlang-cli bundle && ./samlang-cli/bin/index.js format",
    "bundle": "yarn workspaces foreach run bundle",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "test:integration": "esr scripts/compile-repository.ts",
    "bump": "yarn up @types/jest @types/node prettier jest esbuild husky lint-staged eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.21.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "esbuild": "^0.13.3",
    "eslint": "^7.32.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "jest": "^27.2.3",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common",
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "import/no-internal-modules": [
            "error",
            {
              "allow": [
                "vscode-languageserver/node",
                "**/samlang-core-analysis/*",
                "**/samlang-core-ast/*",
                "**/samlang-core-interpreter/*",
                "**/samlang-core-optimization/control-flow-graph*",
                "**/yarn-plugin-monorail/src/utils/*"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "jest": {
    "transform": {
      "\\.ts$": "@dev-sam/jest-esbuild-transformer"
    },
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  },
  "lint-staged": {
    "**/*.{ts,yml}": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@3.0.2"
}
