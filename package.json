{
  "private": true,
  "workspaces": [
    "samlang-cli",
    "samlang-core-*",
    "samlang-demo"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.ts'",
    "format:generatedDTS": "prettier --write samlang-core-parser-generated/*.d.ts",
    "format:check": "prettier --check '**/*.ts'",
    "codegen": "exit 0",
    "compile": "./bin/monorail compile",
    "bundle": "./bin/monorail bundle",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "test:integration": "ts-node-script scripts/compile-repository.ts",
    "test:new-linter-config:dev-sam-local": "eslint --config configurations/latest-local-linter-config.js ."
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@dev-sam/codegen-cli": "^0.0.2",
    "@dev-sam/eslint-config-common": "0.17.0",
    "@dev-sam/tssa": "^0.0.5",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.3.0",
    "eslint": "^7.7.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.11",
    "prettier": "2.1.0",
    "ts-node": "^9.0.0",
    "typescript": "4.0.2"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common",
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "import/no-internal-modules": [
            "error",
            {
              "allow": [
                "antlr4ts/**",
                "**/samlang-core-analysis/*",
                "**/samlang-core-ast/*",
                "**/samlang-core-interpreter/*",
                "**/samlang-core-optimization/simple-optimizations*",
                "**/samlang-core-parser-generated/*"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "jest": {
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/samlang-core-parser-generated/"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn prettier --write"
    ]
  }
}
