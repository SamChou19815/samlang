{
  "private": true,
  "workspaces": [
    "samlang-cli",
    "samlang-core"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js}'",
    "format:check": "prettier --check '**/*.{ts,js}'",
    "build": "yarn workspaces foreach -t run build",
    "codegen": "yarn workspaces foreach -t run codegen",
    "bundle": "yarn build && yarn workspaces foreach -t run bundle",
    "test": "jest --coverage",
    "postinstall": "yarn codegen"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@dev-sam/eslint-config-common": "0.15.0",
    "@types/jest": "^26.0.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-jest": "^26.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "3.9.6"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common",
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "consistent-return": "off",
          "default-case": "off",
          "max-classes-per-file": "off",
          "no-empty-function": "off",
          "no-useless-constructor": "off",
          "no-undef": "off",
          "no-unused-vars": "off",
          "prefer-destructuring": "off",
          "import/no-internal-modules": [
            "error",
            {
              "allow": [
                "antlr4ts/**",
                "**/samlang-core/src/analysis/*",
                "**/samlang-core/src/ast/**",
                "**/samlang-core/src/errors/*",
                "**/samlang-core/src/interpreter/*",
                "**/samlang-core/src/optimization/*",
                "**/samlang-core/src/parser/generated/*",
                "**/samlang-core/src/services/*",
                "**/samlang-core/src/util/*"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "jest": {
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/generated/"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "yarn prettier --write"
    ]
  }
}
