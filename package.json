{
  "private": true,
  "workspaces": [
    "jest-raw-loader",
    "samlang-cli",
    "samlang-core"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,yml}'",
    "bundle": "yarn workspaces foreach -ptv run bundle",
    "c": "yarn workspaces foreach -tv run compile",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "test:integration": "esr scripts/compile-repository.ts",
    "bump": "yarn up @types/jest @types/node prettier jest esbuild husky lint-staged eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.22.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@dev-sam/jest-raw-loader": "workspace:0.0.1",
    "@dev-sam/samlang-cli": "workspace:0.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "esbuild": "^0.13.10",
    "eslint": "^8.1.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common",
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "import/no-internal-modules": [
            "error",
            {
              "allow": [
                "vscode-languageserver/node",
                "**/samlang-core/ast/*",
                "**/samlang-core/checker",
                "**/samlang-core/compiler",
                "**/samlang-core/errors",
                "**/samlang-core/optimization",
                "**/samlang-core/parser",
                "**/samlang-core/printer",
                "**/samlang-core/services",
                "**/samlang-core/utils"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "jest": {
    "transform": {
      "\\.ts$": "@dev-sam/jest-esbuild-transformer",
      "\\.wat$": "@dev-sam/jest-raw-loader"
    },
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  },
  "lint-staged": {
    "**/*.{ts,yml}": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@3.1.0"
}
