{
  "private": true,
  "workspaces": [
    "samlang-cli",
    "samlang-core"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js}'",
    "format:check": "prettier --check '**/*.{ts,js}'",
    "build": "yarn workspaces foreach -t run build",
    "codegen": "yarn workspaces foreach -t run codegen",
    "bundle": "yarn workspaces foreach -t run bundle",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "postinstall": "yarn codegen && yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@dev-sam/eslint-config-common": "0.17.0",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.7.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.11",
    "prettier": "2.1.0",
    "typescript": "4.0.2"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common",
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "import/no-internal-modules": [
            "error",
            {
              "allow": [
                "antlr4ts/**",
                "**/samlang-core/src/analysis/*",
                "**/samlang-core/src/ast/**",
                "**/samlang-core/src/errors/*",
                "**/samlang-core/src/interpreter/*",
                "**/samlang-core/src/optimization/simple-optimizations*",
                "**/samlang-core/src/parser/generated/*",
                "**/samlang-core/src/services/*",
                "**/samlang-core/src/util/*"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "jest": {
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/generated/"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "yarn prettier --write"
    ]
  }
}
