{
  "private": true,
  "workspaces": [
    "jest-raw-loader",
    "samlang-cli",
    "samlang-core",
    "samlang-vscode"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,yml}'",
    "bundle": "turbo run bundle",
    "check": "turbo run compile",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "test:integration": "esr compile-repository.ts",
    "core": "pnpm --filter @dev-sam/samlang-core",
    "cli": "pnpm --filter @dev-sam/samlang-cli",
    "vscode": "pnpm --filter samlang-vscode",
    "bump": "pnpm up -r @types/jest @types/node prettier jest esbuild husky lint-staged eslint \"@typescript-eslint/*\""
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.23.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@dev-sam/jest-raw-loader": "workspace:0.0.1",
    "@dev-sam/samlang-cli": "workspace:0.6.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "esbuild": "^0.14.14",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.1",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.5.2"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "npmClient": "pnpm",
    "globalDependencies": [
      "configurations/*"
    ],
    "pipeline": {
      "compile": {
        "outputs": [
          "tsconfig.tsbuildinfo"
        ]
      },
      "bundle": {
        "outputs": [
          "dist/index.js",
          "out/**",
          "bin/index.js"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "@dev-sam/common"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "pluginSearchDirs": [
      "."
    ]
  },
  "jest": {
    "transform": {
      "\\.ts$": "@dev-sam/jest-esbuild-transformer",
      "\\.wat$": "@dev-sam/jest-raw-loader"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    }
  },
  "lint-staged": {
    "**/*.{ts,js,yml}": [
      "pnpm prettier --write"
    ]
  },
  "dependencies": {
    "turbo": "^1.0.24"
  }
}
