{
  "private": true,
  "workspaces": [
    "jest-raw-loader",
    "samlang-cli",
    "samlang-core",
    "samlang-vscode"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,yml}'",
    "bundle": "yarn workspaces foreach -ptv run bundle",
    "c": "yarn workspaces foreach -tv run compile",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "test:integration": "esr compile-repository.ts",
    "core": "yarn workspace @dev-sam/samlang-core",
    "cli": "yarn workspace @dev-sam/samlang-cli",
    "vscode": "yarn workspace samlang-vscode",
    "bump": "yarn up @types/jest @types/node prettier jest esbuild husky lint-staged eslint \"@typescript-eslint/*\""
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.23.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@dev-sam/jest-raw-loader": "workspace:0.0.1",
    "@dev-sam/samlang-cli": "workspace:0.5.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "esbuild": "^0.14.5",
    "eslint": "^8.4.1",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "pluginSearchDirs": [
      "."
    ]
  },
  "jest": {
    "transform": {
      "\\.ts$": "@dev-sam/jest-esbuild-transformer",
      "\\.wat$": "@dev-sam/jest-raw-loader"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    }
  },
  "lint-staged": {
    "**/*.{ts,js,yml}": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.0-rc.8"
}
