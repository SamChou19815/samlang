{
  "private": true,
  "workspaces": [
    "jest-raw-loader",
    "samlang-cli",
    "samlang-core",
    "samlang-vscode"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,yml}'",
    "bundle": "pnpm -r bundle",
    "check": "turbo run compile",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "test:checker-unit-tests": "jest -t expression-type-checker",
    "test:integration": "esr compile-repository.ts",
    "core": "pnpm --filter @dev-sam/samlang-core",
    "cli": "pnpm --filter @dev-sam/samlang-cli",
    "vscode": "pnpm --filter samlang-vscode",
    "bump": "pnpm up -r @types/jest @types/node prettier jest esbuild husky lint-staged turbo eslint \"@typescript-eslint/*\""
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.23.0",
    "@dev-sam/jest-esbuild-transformer": "workspace:0.4.0",
    "@dev-sam/jest-raw-loader": "workspace:0.0.1",
    "@dev-sam/samlang-cli": "workspace:0.6.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^28.0.2",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "turbo": "^1.2.5",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "pluginSearchDirs": [
      "."
    ]
  },
  "jest": {
    "transform": {
      "\\.ts$": "@dev-sam/jest-esbuild-transformer",
      "\\.wat$": "@dev-sam/jest-raw-loader"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    }
  },
  "lint-staged": {
    "**/*.{ts,js,yml}": [
      "pnpm prettier --write"
    ]
  },
  "packageManager": "pnpm@6.29.2"
}
