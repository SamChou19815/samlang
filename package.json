{
  "private": true,
  "workspaces": [
    "samlang-cli",
    "samlang-core-*",
    "samlang-demo",
    "samlang-dummy"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "codegen": "yarn workspace @dev-sam/samlang-cli bundle && ./samlang-cli/bin/index.js format",
    "bundle": "yarn workspaces foreach run bundle",
    "test": "jest --coverage",
    "test:single": "jest -t",
    "test:integration": "esr scripts/compile-repository.ts",
    "test:new-linter-config:dev-sam-local": "eslint --config configurations/latest-local-linter-config.js .",
    "bump": "yarn up @types/jest @types/node typescript prettier jest husky lint-staged esbuild \"esbuild-*\" eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.21.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "esbuild-runner": "^1.3.2",
    "eslint": "^7.24.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common",
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "import/no-internal-modules": [
            "error",
            {
              "allow": [
                "vscode-languageserver/node",
                "**/samlang-core-analysis/*",
                "**/samlang-core-ast/*",
                "**/samlang-core-interpreter/*",
                "**/samlang-core-optimization/simple-optimizations*"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "jest": {
    "transform": {
      "\\.ts$": "esbuild-runner/jest"
    },
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn prettier --write"
    ]
  }
}
