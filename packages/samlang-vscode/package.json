{
  "name": "vscode-samlang",
  "displayName": "vscode-samlang",
  "description": "samlang for VSCode",
  "version": "0.0.15",
  "publisher": "dev-sam",
  "repository": {
    "url": "https://github.com/SamChou19815/samlang"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "images/samlang.png",
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "samlang",
        "aliases": [
          "samlang",
          "SAMLANG"
        ],
        "extensions": [
          ".sam"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "samlang",
        "scopeName": "text.samlang",
        "path": "./syntaxes/samlang.json"
      }
    ],
    "commands": [
      {
        "title": "Restart Client",
        "category": "samlang",
        "command": "samlang.restartClient"
      }
    ],
    "snippets": [
      {
        "language": "samlang",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "samlang Language Service Configuration",
      "properties": {
        "samlang.programPath": {
          "type": "string",
          "description": "Path to `samlang` program."
        }
      }
    }
  },
  "scripts": {
    "check": "tsc --incremental --noEmit",
    "bundle": "node bundle.js",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.3.0",
    "@types/vscode": "1.75.0",
    "esbuild": "^0.19.3",
    "vscode-languageclient": "^8.1.0"
  }
}
